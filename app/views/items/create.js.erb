<% if @item.saved? %>
  $('.alert').hide();
  $('.flash').prepend("<div class='alert alert-success alert-dismissible' role='alert'><button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button><%= flash[:notice] %></div>");
<% else %>
  $('.alert').hide();
  $('.flash').prepend("<div class='alert alert-warning alert-dismissible' role='alert'><button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button><% flash[:error] %></div>");
<% end %>
