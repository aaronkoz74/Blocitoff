<% if @item.destroyed? %>
  $('.alert').hide();
  $('#item-<%= @item.id %>').hide();
  $('.flash').prepend("<div class='alert alert-success alert-dismissible fade-in' role='alert'><button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button><%= flash[:notice] %></div>");
<% else %>
  $('.alert').hide();
  $('.flash').prepend("<div class='alert alert-danger alert-dismissible fade-in' role='alert'><button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button><%= flash[:alert] %></div>");
<% end %>
