<div class="row">
  <div class="col-md-8">
    <h1>Hello <%= @user.username %> --- <small>Ready to be productive?</small></h1>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Tasks At-hand</h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <td><strong>Description</strong></td>
            <td><strong>Time Remaining</strong></td>
            <td><strong>Completed?</strong></td>
          </tr>
        </thead>
        <tbody>
          <% @user.items.each do |item| %>
            <tr id="item-<%= item.id %>">
              <td><%= item.description %></td>
              <td>
                <%= distance_of_time_in_words(item.created_at, Time.now - 7.days) %>
              </td>
              <td>
                <%= render partial: 'items/item', locals: { user: @user, item: item } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col-md-12 text-center">
        <% if user_signed_in? && @user == current_user %>
          <%= link_to "New Item", new_user_item_path(@user), class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
